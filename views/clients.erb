<h1>Clients</h1>
<a href="/new_client" class="btn btn-med btn-primary" type="button">New Client</a>
<table class="table table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Retirement Year</th>
    <th>Zipcode</th>
    <th>Portfolios</th>
  </tr>
</thead>
<tr>
  <% @clients.each do |client| %>
  <td><%= client.name %></td>
  <td><%= client.retirement %></td>
  <td><%= client.zipcode %></td>
<td><%= client.portfolios.map {|portfolio| portfolio.sector }.join(", ") %>

</td>
  <td><a href="/edit_client/<%= client.id %>">Edit</a></td>
</tr><% end %>

</table>