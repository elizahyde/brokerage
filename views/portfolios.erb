<h1>Portfolios</h1>
<a href="/new_portfolio" class="btn btn-med btn-primary" type="button">New Portfolio</a><br><br>
<table class="table table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Client</th>
    <th>Stocks</th>
  </tr>
</thead>
<tr>
  <% @portfolios.each do |portfolio| %>
<td><%= portfolio.sector %></td>
<td><%= portfolio.client.name %></td>
<td><%= portfolio.stocks.map {|stock| stock.symbol }.join(", ") %></td>
<td><a href="/edit_portfolio/<%= portfolio.id %>">Edit</a><td>
  </tr><% end %>
</table>